{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "./scripts/build",
                "args": [
                    ""
                ]
            },
            "linux": {
                "command": "./scripts/build.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(/d+):(/d+):/s+(warning|error):/s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "windows": {
                "command": "./scripts/clean",
                "args": [
                    ""
                ]
            },
            "linux": {
                "command": "./scripts/clean.sh"
            }
        },
        {
            "label": "prepare-assets",
            "type": "shell",
            "windows": {
                "command": "./scripts/assets",
                "args": [
                    ""
                ]
            },
            "linux": {
                "command": "./scripts/assets.sh"
            }
        },
        {
            "label": "lazy-build",
            "dependsOn": [
                "build",
                "prepare-assets"
            ]
        }
    ]
}